{% extends 'base.html.twig' %}

{% block title %}Inscription Joueur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
    <link rel="stylesheet" href="{{ asset('css/register_particular.css') }}">
{% endblock %}

{% block body %}
<div class="register-particular-container">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="register-particular-alert" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="register-particular-title">Inscription Joueur</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'register-particular-form'}}) }}
        {{ form_row(registrationForm.firstName, {label: 'Prénom'}) }}
        {{ form_row(registrationForm.lastName, {label: 'Nom'}) }}
        {{ form_row(registrationForm.email, {label: 'Adresse mail'}) }}
        {{ form_row(registrationForm.address, {label: 'Adresse'}) }}
        {{ form_row(registrationForm.phoneNumber, {label: 'Numéro de téléphone'}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'Accepter les conditions'}) }}
        
        <button type="submit" class="btn-register">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}